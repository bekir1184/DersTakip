<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AnaSayfa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ana Sayfa"
        android:fontFamily="@font/madelina"
        android:textColor="@android:color/white"
        android:id="@+id/baslikAnasayfa"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>
    <androidx.viewpager.widget.ViewPager
        android:foregroundGravity="center"
        android:layout_centerInParent="true"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:layout_below="@+id/baslikAnasayfa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPagerAnaSayfa"/>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:fab_labelStyle="@style/floatTheme"
        app:fab_addButtonPlusIconColor="@color/colorPrimaryDark"
        app:fab_addButtonColorNormal="@android:color/white"
        app:fab_addButtonColorPressed="@color/cardview_dark_background">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/white"
            app:fab_colorPressed="@android:color/white"
            app:fab_icon="@drawable/ic_add_black_24dp"
            app:fab_size="mini"
            android:id="@+id/dersEkleFloat"
            app:fab_title="Ders Ekle"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@android:color/white"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_icon="@drawable/ic_add_black_24dp"
            app:fab_size="mini"
            android:id="@+id/sinavEkleFloat"
            app:fab_title="SÄ±nav Ekle"
            />


    </com.getbase.floatingactionbutton.FloatingActionsMenu>









</RelativeLayout>