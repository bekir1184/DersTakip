<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/arkaplan"
    android:layout_height="match_parent"
    tools:context=".BilgiGir">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Derse girdi mi ?"
        android:textStyle="bold"
        android:id="@+id/girdimi"
        android:fontFamily="@font/madelina"
        android:textSize="40dp"
        android:layout_margin="12dp"
        android:textColor="@android:color/white"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/girdimi"
        app:cardCornerRadius="25dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Ders Adi"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/madelina"
                android:layout_margin="15dp"
                android:id="@+id/girdinMiBaslik"/>


            <Button
                android:layout_below="@+id/girdinMiBaslik"
                android:textSize="20dp"
                android:fontFamily="@font/madelina"
                android:textAllCaps="false"
                android:background="@drawable/edittext"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Girdim"
                android:id="@+id/girdimButton"/>
            <Button
                android:textSize="20dp"
                android:fontFamily="@font/madelina"
                android:textAllCaps="false"
                android:background="@drawable/edittext"
                android:layout_margin="15dp"
                android:layout_below="@id/girdimButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Girmedim"
                android:id="@+id/girmedimButton"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>