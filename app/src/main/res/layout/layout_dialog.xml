<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ders Güncelle"
                android:textStyle="bold"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/madelina"
                android:textSize="50dp"
                android:id="@+id/diaBaslik"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ders Adi"
                android:fontFamily="@font/madelina"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:layout_above="@+id/diaDersAdiEditText"/>
            <EditText
                android:layout_below="@+id/diaBaslik"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ders adı giriniz..."
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/madelina"
                android:background="@drawable/edittext"
                android:layout_margin="15dp"
                android:id="@+id/diaDersAdiEditText"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Devamsizlik Hakkı"
                android:fontFamily="@font/madelina"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:layout_above="@+id/diaDersDevamEditText"/>
            <EditText
                android:layout_below="@+id/diaDersAdiEditText"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Devamsizlik hakkı..."
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/madelina"
                android:background="@drawable/edittext"
                android:layout_margin="15dp"
                android:id="@+id/diaDersDevamEditText"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yapılan Devamsizlik "
                android:fontFamily="@font/madelina"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:layout_above="@+id/diaYapilan"/>
            <EditText
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/diaDersDevamEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/madelina"
                android:background="@drawable/edittext"
                android:layout_margin="10dp"
                android:id="@+id/diaYapilan"
                android:gravity="center"/>



        </RelativeLayout>







</RelativeLayout>